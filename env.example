# Server Configuration
HOST=0.0.0.0
PORT=8000

# Model Configuration
DS_OCR_MODEL=unsloth/DeepSeek-OCR
DEVICE=auto  # Options: auto, cuda, mps, cpu

# OCR Configuration
DEFAULT_PROMPT=<image>\n<|grounding|>Convert the document to markdown format with proper headers, lists, tables, and formatting.
BASE_SIZE=1024
IMAGE_SIZE=640
PDF_DPI=220

# Image Compression (for performance optimization)
ENABLE_COMPRESSION=true
MAX_IMAGE_DIMENSION=2048  # Max width/height before resizing
JPEG_QUALITY=85  # 1-100, higher is better quality
PNG_COMPRESSION=6  # 0-9, higher is more compression

# Performance Optimizations (for GPU acceleration)
ENABLE_TORCH_COMPILE=true  # Use torch.compile() for 20-30% speedup (CUDA only)
ENABLE_FLASH_ATTENTION=true  # Use Flash-Attention 2 for 2-4x speedup (requires flash-attn package: pip install flash-attn --no-build-isolation)
USE_MEMORY_PROCESSING=true  # Use in-memory compression for small files
MEMORY_PROCESSING_MAX_SIZE_MB=10  # Max file size for in-memory processing

# File Processing Limits
MAX_FILE_SIZE_MB=50
MAX_PDF_PAGES=100

# CORS Configuration
# Comma-separated list of allowed origins (* for all)
CORS_ORIGINS=*

# Application Metadata
VERSION=1.0.0
API_TITLE=DeepSeek-OCR API

# Environment
ENVIRONMENT=development  # Options: development, production

# Logging
LOG_LEVEL=info  # Options: debug, info, warning, error (use 'debug' for verbose logging)
TRANSFORMERS_VERBOSITY=error  # Options: debug, info, warning, error, critical (reduces transformers library logging)

